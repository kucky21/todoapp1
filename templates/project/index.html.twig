{% extends 'template.html.twig' %}


{% block title %}Project index{% endblock %}

{% block main %}
    <h1>Current Projects</h1>

    <section class="container row text-center">
        {% for project in projects %}
        	<article class="table txt maincolor container p-4 m-4 col-lg-5 col-sm-10 align-items-center justify-content-center">
				<h4 class="card-header m-2 bg-white">
					NÂ° {{ project.id }} : {{ project.label }}
				</h4>
				<ul class="list-group list-group-flush align-items-center">
					<li class="list-group-item my-2"> Opened {{ project.openingDate ? project.openingDate|date('d-m-Y') : '' }} ending at {{ project.deadline ? project.deadline|date('d-m-Y') : '' }}</li>
					<li class="list-group-item my-2">{{ project.description }}</li>
				</ul>
			<div class="container row justify-content-around my-2">
				<a class="btn bodycolor txtheader p-2 m-1" href="{{ path('project_show', {'id': project.id}) }}">Show</a>
				<a class="btn bodycolor txtheader p-2 m-1" href="{{ path('project_edit', {'id': project.id}) }}">Edit</a>
			</div>
	</article>
    {% endfor %}
{% endblock %}
